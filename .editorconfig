# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Universal settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefiles
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# PowerShell scripts
[*.ps1]
indent_size = 4
end_of_line = crlf

# Docker files
[Dockerfile*]
indent_size = 2

# Requirements files
[requirements*.txt]
indent_size = 4
